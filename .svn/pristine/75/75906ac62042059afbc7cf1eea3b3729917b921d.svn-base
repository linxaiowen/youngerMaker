<script>
import Header from "@/components/Header"
export default {
    data () {
        return{
            minutes : '5',
            seconds : '0'
        }
    },
    components: {
        'x-header': Header,
    },
    created(){
        this.CountDown();
    },
    methods: {
        CountDown() {   
            var auth_time = 5*60;
            var auth_timetimer = setInterval(() => {
                if(auth_time >= 0){
                    this.minutes = Math.floor(auth_time / 60);
                    this.seconds = Math.floor(auth_time % 60);
                    auth_time--;
                }
                else{
                    clearInterval(auth_timetimer);
                }
            }, 1000);
        }
    }
}
</script>
