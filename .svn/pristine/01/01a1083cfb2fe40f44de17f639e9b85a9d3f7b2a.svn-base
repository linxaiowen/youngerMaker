    <div class="login">
        <div class="title_img">
            <img src="../../assets/images/banner03@2x.png">
        </div>
        <div id="content">
            <div class="account">
                <label>姓名:</label>
                <input type="text" v-model="userName" placeholder="请输入您的名字">
            </div>
            <div class="account">
                <label>性别:</label>
                <input type="text" v-model="gender" placeholder="请输入您的性别">
            </div>
            <div class="account">
                <label>学校:</label>
                <input type="text" v-model="school" placeholder="请输入您的所在学校">
