                <label>邮箱:</label>
                <input type="text" v-model="mail" placeholder="请输入您的常用邮箱">
            </div>
            <div class="login_button" @click="jump_to_iConfirm">
                <img src="../../assets/images/bt_01@2x.png">
                <span>提交</span>
            </div>
        </div>
    </div>
